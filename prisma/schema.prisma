generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

enum Role {
  USER
  SUPERADMIN
}

enum Gender {
  MALE
  FEMALE
}

enum Status {
  Diproses
  Ditolak
  Diterima
}

model User {
  id String @id @default(cuid())
  fullName String
  email String @unique
  password String
  role Role
  profileImage String
  gender Gender
  address String
  phoneNumber String

  resource Resource[]
}

model Category {
  id String @id @default(cuid())
  name String
  description String
  iconImage String
  backgroundColor String

  resource Resource[]
}

model Resource {
  id String @id @default(cuid())
  contributorName String
  contributorEmail String @unique
  status Status

  title String
  slug String
  description String
  featuredImage String
  linkUrl String
  viewCount Int

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  categoryId String
  category Category @relation(fields: [categoryId], references: [id])
  userId String
  user User @relation(fields: [userId], references: [id])
}